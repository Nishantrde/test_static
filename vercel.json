{
    "version": 2,
    "builds": [
      {
        "src": "static_deploy/wsgi.py",
        "use": "@vercel/python",
        "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
      },
      {
          "src": "static_files_builder.sh", 
          "use": "@vercel/static-build",
          "config": {
            "distDir": "staticfiles" 
          }
        }

    ],
    "routes": [
      {
          "src": "/static/(.*)",
          "dest": "/static/$1"
        },
      {
        "src": "/(.*)",
        "dest": "static_deploy/wsgi.py"
      }
    ]
  }
